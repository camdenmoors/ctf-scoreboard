%h1 Listing surveys

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Difficulty
      %th Realism
      %th Interest
      %th Comment
      %th Submitted flag


  %tbody
    - @surveys.each do |survey|
      %tr
        %td= survey.difficulty
        %td= survey.realism
        %td= survey.interest
        %td= survey.comment
        %td= survey.submitted_flag_id
        %td= link_to 'Show', survey
        %td= link_to 'Edit', edit_survey_path(survey)
        %td= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Survey', new_survey_path
